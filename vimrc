" .vimrc setup.

set title
set showcmd
set number
set nocompatible
set wrap
set confirm

set scrolloff=3
set ruler
set cursorline
hi CursorLine cterm=bold

" colorscheme darkblue

syntax on
filetype plugin on

set nobackup
set noswapfile
set autoread

set tabstop=4
set autoindent
set expandtab
set shiftwidth=4
set shiftround
set smarttab
set tabstop=4
set bs=indent,eol,start

set incsearch
set ignorecase
set smartcase
set hlsearch
